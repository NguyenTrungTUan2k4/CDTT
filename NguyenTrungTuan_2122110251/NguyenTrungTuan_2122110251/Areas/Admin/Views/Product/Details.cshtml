@model NguyenTrungTuan_2122110251.Models.ProductViewModel
@using NguyenTrungTuan_2122110251.Models
@{
    ViewBag.Title = "Chi tiết sản phẩm";
}

<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="text-dark">Chi tiết sản phẩm</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Home</a></li>
                        <li class="breadcrumb-item active">Chi tiết sản phẩm</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>

    <section class="content">
        <div class="container-fluid">
            <div class="card">
                <div class="card-header">
                    <div class="d-flex justify-content-between mb-4">
                        <div>
                            <a href="@Url.Action("ListProduct", "Product")" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Trở về
                            </a>
                        </div>
                        <div>
                            <a href="@Url.Action("Edit", "Product", new { id = Model.Id })" class="btn btn-warning">
                                <i class="fas fa-edit"></i> Sửa
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="form-horizontal">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <label class="col-md-4 font-weight-bold">Tên sản phẩm:</label>
                                    <div class="col-md-8">
                                        <p class="form-control-plaintext">@Model.Name</p>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label class="col-md-4 font-weight-bold">Danh mục:</label>
                                    <div class="col-md-8">
                                        <p class="form-control-plaintext">@Model.CategoryName</p>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label class="col-md-4 font-weight-bold">Thương hiệu:</label>
                                    <div class="col-md-8">
                                        <p class="form-control-plaintext">@Model.BrandName</p>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label class="col-md-4 font-weight-bold">Mô tả ngắn:</label>
                                    <div class="col-md-8">
                                        <p class="form-control-plaintext">@Model.ShortDes</p>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label class="col-md-4 font-weight-bold">Giá:</label>
                                    <div class="col-md-8">
                                        <p class="form-control-plaintext text-success">@Model.Price</p>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label class="col-md-4 font-weight-bold">Giảm giá:</label>
                                    <div class="col-md-8">
                                        <p class="form-control-plaintext text-danger">@Model.PriceDiscount</p>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label class="col-md-4 font-weight-bold">Mô tả đầy đủ:</label>
                                    <div class="col-md-8">
                                        <p class="form-control-plaintext">@Model.FullDescription</p>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group row">
                                    <label class="col-md-4 font-weight-bold">Hình ảnh:</label>
                                    <div class="col-md-8">
                                        @if (!string.IsNullOrEmpty(Model.Image))
                                        {
                                            <img src="@Url.Content("~/content/images/items/" + Model.Image)" 
                                                 class="img-fluid img-thumbnail" 
                                                 alt="Product Image" style="width: 200px;">
                                        }
                                        else
                                        {
                                            <p class="text-muted">Không có hình ảnh.</p>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div> <!-- /.form-horizontal -->
                </div>
            </div>
        </div>
    </section>
</div>
