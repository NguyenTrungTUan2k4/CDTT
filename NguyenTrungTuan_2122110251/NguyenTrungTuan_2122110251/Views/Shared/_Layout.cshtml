<!DOCTYPE html>
<html>
<head>
    <title>TrungTuanShop</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Poppins:200,300,400,500,600,700,800&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Lora:400,400i,700,700i&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Amatic+SC:400,700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/Content/css/open-iconic-bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/css/animate.css">

    <link rel="stylesheet" href="~/Content/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/Content/css/owl.theme.default.min.css">
    <link rel="stylesheet" href="~/Content/css/magnific-popup.css">

    <link rel="stylesheet" href="~/Content/css/aos.css">

    <link rel="stylesheet" href="~/Content/css/ionicons.min.css">

    <link rel="stylesheet" href="~/Content/css/bootstrap-datepicker.css">
    <link rel="stylesheet" href="~/Content/css/jquery.timepicker.css">

    <link rel="stylesheet" href="~/Content/css/flaticon.css">
    <link rel="stylesheet" href="~/Content/css/icomoon.css">
    <link rel="stylesheet" href="~/Content/css/style.css">

    <script>
        $(document).ready(function () {
            $.ajax({
                url: '@Url.Action("GetCategories", "Home")',
                method: 'GET',
                success: function (data) {
                    console.log(data);

                    var dropdownMenu = $('#categoryDropdown');
                    dropdownMenu.empty();

                    if (data.length > 0) {
                        dropdownMenu.append('<a class="dropdown-item" href="/Home/Grid/0">All</a>');
                        data.forEach(function (category) {
                            dropdownMenu.append('<a class="dropdown-item" href="/Home/Grid/' + category.Id + '">' + category.Name + '</a>');
                        });
                    }
                },
                error: function () {
                    console.log("Error loading categories");
                }
            });
        });
        $(document).ready(function () {
            $(".view-details").click(function () {
                var orderId = $(this).data("id");
                $.ajax({
                    url: '@Url.Action("GetOrderDetails", "Order")',
                    type: "GET",
                    data: { id: orderId },
                    success: function (data) {
                        $("#orderDetailsContent").html(data);
                        $("#orderDetailModal").modal("show");
                    },
                    error: function (xhr) {
                        alert("Error: " + (xhr.responseText || "Unable to load order details."));
                    }
                });
            });
        });
        $(document).ready(function () {
            function updateOrderCount() {
                $.ajax({
                    url: '@Url.Action("GetOrderCount", "Order")',
                    type: 'GET',
                    success: function (data) {
                        $("#OrderCount").text(data.count);
                    },
                    error: function () {
                        console.error("Unable to update order count.");
                    }
                });
            }
            updateOrderCount();
            setInterval(updateOrderCount, 60000);
        });
    </script>
</head>
<body>
    <div class="py-1 bg-primary">
        <div class="container">
            <div class="row no-gutters d-flex align-items-start align-items-center px-md-0">
                <div class="col-lg-12 d-block">
                    <div class="row d-flex">
                        <div class="col-md pr-4 d-flex topper align-items-center">
                            <div class="icon mr-2 d-flex justify-content-center align-items-center"><span class="icon-phone2"></span></div>
                            <span class="text">+ 1235 2355 98</span>
                        </div>
                        <div class="col-md pr-4 d-flex topper align-items-center">
                            <div class="icon mr-2 d-flex justify-content-center align-items-center"><span class="icon-paper-plane"></span></div>
                            <span class="text">youremail@email.com</span>
                        </div>
                        <div class="col-md-5 pr-4 d-flex topper align-items-center text-lg-right">
                            <span class="text">3-5 Business days delivery &amp; Free Returns</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <nav class="navbar navbar-expand-lg navbar-dark ftco_navbar bg-dark ftco-navbar-light" id="ftco-navbar">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">Vegefoods</a>
            <div class="col-xl-6 col-lg-5 col-md-6">
                <form id="search-form" class="search-header">
                    <div class="input-group w-80">
                        <input type="text" id="search-query" name="query" class="form-control" placeholder="Search">

                    </div>
                </form>
                <div id="search-results" style="position: absolute; background: white; width: 80%; z-index: 1000; display:none;">
                </div>
            </div>

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#ftco-nav" aria-controls="ftco-nav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="oi oi-menu"></span> Menu
            </button>

            <div class="collapse navbar-collapse" id="ftco-nav">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item active"><a href="@Url.Action("Index", "Home")" class="nav-link">Home</a></li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="dropdown04" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Shop</a>
                        <div class="dropdown-menu" aria-labelledby="dropdown04">
                            <a class="dropdown-item" href="@Url.Action("Index", "Product")">Product</a>
                            <a class="dropdown-item" href="@Url.Action("ListProduct", "Product")">Product List</a>
                            <a class="dropdown-item" href="@Url.Action("ShoppingCart", "Cart")">Cart</a>
                        </div>
                    </li>
                    <li class="nav-item"><a href="@Url.Action("About", "Home")" class="nav-link">About</a></li>
                    <li class="nav-item"><a href="@Url.Action("Blog", "Home")" class="nav-link">Blog</a></li>
                    <li class="nav-item"><a href="@Url.Action("Contact", "Home")" class="nav-link">Contact</a></li>

                    @if (Session["idUser"] != null)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="icon-user"></i> @Session["FullName"]
                            </a>
                            <div class="dropdown-menu" aria-labelledby="userDropdown">
                                <a class="dropdown-item" href="@Url.Action("Index", "Home")">Home</a>
                                <a class="dropdown-item" href="@Url.Action("Index", "Home", new { area = "Admin" })">Admin</a>
                                <a class="dropdown-item" href="@Url.Action("ShoppingCart", "Cart")">Cart</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="@Url.Action("Logout", "Home")">Log out</a>
                            </div>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item"><a href="@Url.Action("Login", "Home")" class="nav-link">Login</a></li>
                        <li class="nav-item"><a href="@Url.Action("Register", "Home")" class="nav-link">Register</a></li>
                    }

                    <li class="nav-item cta cta-colored">
                        @if (Session["idUser"] != null)
                        {
                            int userId = int.Parse(Session["idUser"].ToString());
                            string countKey = "count_" + userId;
                            var cartCount = Session[countKey] ?? 0;
                            <a href="@Url.Action("ShoppingCart", "Cart")" class="nav-link">
                                <span class="icon-shopping_cart"></span><span class="cart-count">[@cartCount]</span>
                            </a>
                        }
                        else
                        {
                            <a href="@Url.Action("Login", "Home")" class="nav-link" title="Login to view cart">
                                <span class="icon-shopping_cart"></span><span class="cart-count">[0]</span>
                            </a>
                        }
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
        <footer class="ftco-footer ftco-section">
            <!-- keep footer unchanged -->
        </footer>
        <script src="~/Content/js/jquery.min.js"></script>
        <script src="~/Content/js/jquery-migrate-3.0.1.min.js"></script>
        <script src="~/Content/js/popper.min.js"></script>
        <script src="~/Content/js/bootstrap.min.js"></script>
        <script src="~/Content/js/jquery.easing.1.3.js"></script>
        <script src="~/Content/js/jquery.waypoints.min.js"></script>
        <script src="~/Content/js/jquery.stellar.min.js"></script>
        <script src="~/Content/js/owl.carousel.min.js"></script>
        <script src="~/Content/js/jquery.magnific-popup.min.js"></script>
        <script src="~/Content/js/aos.js"></script>
        <script src="~/Content/js/jquery.animateNumber.min.js"></script>
        <script src="~/Content/js/bootstrap-datepicker.js"></script>
        <script src="~/Content/js/scrollax.min.js"></script>
        <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBVWaKrjvy3MaE7SQ74_uJiULgl1JY0H2s&sensor=false"></script>
        <script src="~/Content/js/google-map.js"></script>
        <script src="~/Content/js/main.js"></script>

        <!-- Search Script moved down here -->
        <script>
            $(document).ready(function () {
                $('#search-query').on('keyup', function () {
                    let query = $(this).val();
                    if (query.length > 0) {
                        $.ajax({
                            url: '@Url.Action("LiveSearch", "Home")',
                            method: 'GET',
                            data: { query: query },
                            success: function (data) {
                                $('#search-results').html(data).show();
                            },
                            error: function () {
                                $('#search-results').html('<p class="text-danger">An error occurred, please try again later.</p>').show();
                            }
                        });
                    } else {
                        $('#search-results').hide();
                    }
                });

                $(document).on('click', function (e) {
                    if (!$(e.target).closest('#search-results, #search-query').length) {
                        $('#search-results').hide();
                    }
                });
            });
        </script>
        @RenderSection("Scripts", required: false)
    </div>
</body>

</html>
